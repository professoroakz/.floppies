# ~/.wgetrc - Wget configuration
# Make wget more user-friendly with sane defaults

# Use the server-provided last modification date
timestamping = on

# Do not create host directories
no_directories = off

# Follow FTP links from HTML documents by default
follow_ftp = on

# Add extensions when necessary
adjust_extension = on

# Retry up to 20 times
tries = 20

# Retry even when connection is refused
retry_connrefused = on

# Use the last component of a redirection URL
trust_server_names = on

# Wait 60 seconds before timing out
timeout = 60

# Continue getting a partially-downloaded file
continue = on

# Show progress bar
show_progress = on
