# Example Custom Bash Aliases
# Copy this to ~/.bash_aliases and customize as needed

# Navigation shortcuts
alias work='cd ~/work'
alias repos='cd ~/repos'
alias downloads='cd ~/Downloads'

# Git shortcuts (beyond the standard ones)
alias gaa='git add --all'
alias gcm='git commit -m'
alias gcam='git commit -am'
alias gph='git push'
alias gpl='git pull'
alias gst='git status -sb'
alias glo='git log --oneline --decorate --graph --all'
alias gd='git diff'
alias gdc='git diff --cached'

# Docker shortcuts
alias dps='docker ps'
alias dpsa='docker ps -a'
alias di='docker images'
alias dex='docker exec -it'
alias dlog='docker logs -f'
alias dcu='docker-compose up -d'
alias dcd='docker-compose down'

# Kubernetes shortcuts
alias k='kubectl'
alias kgp='kubectl get pods'
alias kgs='kubectl get services'
alias kgd='kubectl get deployments'
alias kl='kubectl logs -f'
alias kx='kubectl exec -it'

# Development shortcuts
alias serve='python3 -m http.server'
alias npmr='npm run'
alias y='yarn'
alias pya='source venv/bin/activate'
alias pyd='deactivate'

# System shortcuts
alias update='sudo apt update && sudo apt upgrade'  # Debian/Ubuntu
alias ports='netstat -tulanp'
alias myip='curl ifconfig.me'
alias weather='curl wttr.in'

# Safety nets
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Useful functions
mkcd() {
    mkdir -p "$1" && cd "$1"
}

extract() {
    if [ -f "$1" ]; then
        case "$1" in
            *.tar.bz2)   tar xjf "$1"     ;;
            *.tar.gz)    tar xzf "$1"     ;;
            *.bz2)       bunzip2 "$1"     ;;
            *.rar)       unrar x "$1"     ;;
            *.gz)        gunzip "$1"      ;;
            *.tar)       tar xf "$1"      ;;
            *.tbz2)      tar xjf "$1"     ;;
            *.tgz)       tar xzf "$1"     ;;
            *.zip)       unzip "$1"       ;;
            *.Z)         uncompress "$1"  ;;
            *.7z)        7z x "$1"        ;;
            *)           echo "'$1' cannot be extracted via extract()" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}
